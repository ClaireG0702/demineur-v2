<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.claireg.demineur.GameController" styleClass="main-box">
    <top>
        <VBox spacing="20">
            <Button fx:id="goBackButton" text="Retour" styleClass="btn-back" onAction="#goToMenu"/>
            
            <HBox spacing="10" alignment="TOP_RIGHT">
                <Label text="Mines restantes :"/>
                <Label fx:id="remainedMines" text="10"/>
            </HBox>
        </VBox>
    </top>
        
    <center>
        <GridPane fx:id="gameGrid" gridLinesVisible="true" alignment="CENTER">
            <!-- Grid cases will by add in the controller -->
        </GridPane>
    </center>
</BorderPane>
